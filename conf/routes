# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           control.HomeController.index

POST /user              controllers.HomeController.createUser
GET /user/:id           controllers.HomeController.readUser(id: String)
DELETE /user/:id        controllers.HomeController.deleteUser(id: String)
PATH /user/:id          controllers.HomeController.updateUser(id: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
